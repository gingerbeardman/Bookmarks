{
    "bugs": "https://github.com/gingerbeardman/Bookmarks/issues",
    "description": "Bookmark files in a Sidebar for easier management",
    "funding": "https://ko-fi.com/gingerbeardman",
    "homepage": "https://www.gingerbeardman.com",
    "identifier": "com.gingerbeardman.Bookmarks",
    "name": "Bookmarks",
    "organization": "gingerbeardman",
    "repository": "https://github.com/gingerbeardman/Bookmarks",
    "version": "2.0.0",

    "categories": ["sidebars"],
    
    "main": "main.js",
    
    "activationEvents": [
        "onLanguage:javascript"
    ],
    
    "entitlements": {
        "filesystem": "readonly",
        "process": true
    },
    
    "config": [
        {
            "key": "com.gingerbeardman.Bookmarks.defaultSort",
            "title": "Default Sort Order",
            "description": "Choose the default sorting order for bookmarks",
            "type": "enum",
            "values": ["none", "alphabetical", "recent"],
            "default": "none"
        }
    ],
    
    "sidebars": [
        {
            "id": "com.gingerbeardman.Bookmark.sidebar",
            "name": "Book marks",
            "smallImage": "sidebar-small",
            "smallSelectedImage": "sidebar-small-selected",
            "largeImage": "sidebar-large",
            "largeSelectedImage": "sidebar-large-selected",
            "sections": [
                {
                    "id": "com.gingerbeardman.Bookmark.sidebar",
                    "name": "Bookmarks",
                    "allowMultiple": true,
                    "placeholderText": "No bookmarks have been created.",
                    "placeholderImage": "sidebar-large",
                    "headerCommands": [
                        {
                            "title": "Add",
                            "image": "__builtin.add",
                            "tooltip": "Add a new bookmark",
                            "command": "com.gingerbeardman.Bookmark.add"
                        },
                        {
                            "title": "Remove",
                            "image": "__builtin.remove",
                            "tooltip": "Remove the selected bookmarks",
                            "command": "com.gingerbeardman.Bookmark.remove",
                            "when": "viewItem != null"
                        },
                        {
                            "title": "Refresh",
                            "image": "__builtin.refresh",
                            "tooltip": "Remove bookmarks for files that no longer exist",
                            "command": "com.gingerbeardman.Bookmark.cleanupMissing"
                        },
                        {
                            "title": "Sort",
                            "image": "__builtin.sort",
                            "tooltip": "Sort bookmarks",
                            "command": "com.gingerbeardman.Bookmark.sort"
                        }
                    ],
                    "contextCommands": [
                        {
                            "title": "Remove",
                            "command": "com.gingerbeardman.Bookmark.remove",
                            "when": "viewItem != null"
                        },
                        {
                            "title": "Show in Finder",
                            "command": "com.gingerbeardman.Bookmark.showInFinder",
                            "when": "viewItem != null"
                        }
                    ]
                }
            ]
        }
    ],
    
    "commands": {
        "editor": [
            {
                "title": "Add Bookmark",
                "command": "com.gingerbeardman.Bookmark.add",
                "shortcut": "cmd-shift-b"
            },
            {
                "title": "Remove Bookmark",
                "command": "com.gingerbeardman.Bookmark.removeByFilename",
                "shortcut": "cmd-shift-alt-b"
            },
            {
                "title": "Add Folder Bookmark",
                "command": "com.gingerbeardman.Bookmark.addFolder"
            }
        ]
    }
}